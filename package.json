{
  "name": "commit-message-generator",
  "displayName": "VSCode Commit Generator",
  "description": "Generate commit messages using GitHub Copilot AI",
  "version": "0.0.2",
  "publisher": "YoruAkio",
  "author": {
    "name": "YoruAkio"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YoruAkio/VSCodeCommitGenerator"
  },
  "bugs": {
    "url": "https://github.com/YoruAkio/VSCodeCommitGenerator/issues"
  },
  "homepage": "https://github.com/YoruAkio/VSCodeCommitGenerator#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commitGenerator.generateMessage",
        "title": "Generate Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "commitGenerator.inputToken",
        "title": "Input GitHub Token"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "commitGenerator.generateMessage",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ]
    },
    "configuration": {
      "title": "Commit Message Generator",
      "properties": {
        "commitGenerator.commitFormat": {
          "type": "string",
          "enum": [
            "default",
            "simple"
          ],
          "default": "default",
          "description": "Commit message format style"
        },
        "commitGenerator.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "GitHub Copilot model to use"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.9.3"
  }
}
