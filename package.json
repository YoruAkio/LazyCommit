{
  "name": "lazycommit",
  "displayName": "LazyCommit",
  "description": "Too lazy to write commit messages? Let AI do it for you",
  "version": "0.0.4",
  "publisher": "YoruAkio",
  "author": {
    "name": "YoruAkio"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YoruAkio/VSCodeCommitGenerator"
  },
  "bugs": {
    "url": "https://github.com/YoruAkio/VSCodeCommitGenerator/issues"
  },
  "homepage": "https://github.com/YoruAkio/VSCodeCommitGenerator#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lazycommit.generateMessage",
        "title": "LazyCommit: Generate Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "lazycommit.inputToken",
        "title": "LazyCommit: Input GitHub Token (PAT Fine-grained)"
      },
      {
        "command": "lazycommit.getToken",
        "title": "LazyCommit: Get GitHub Token"
      },
      {
        "command": "lazycommit.selectModel",
        "title": "LazyCommit: Select AI Model"
      },
      {
        "command": "lazycommit.selectCommitStyle",
        "title": "LazyCommit: Select Commit Style"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "lazycommit.generateMessage",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ]
    },
    "configuration": {
      "title": "LazyCommit",
      "properties": {
        "lazycommit.commitFormat": {
          "type": "string",
          "enum": [
            "default",
            "simple",
            "short"
          ],
          "default": "default",
          "description": "Commit message format style"
        },
        "lazycommit.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "GitHub Models AI model to use"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.9.3"
  }
}
